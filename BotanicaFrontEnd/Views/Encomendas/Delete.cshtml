@model ClassBackendBotanica.Encomenda

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<h3>Pretende apagar esta encomenda?</h3>
<div>
    <h4>Encomenda</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataEncomenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataEncomenda)
        </dd>
        
        <dd class = "col-sm-10">
            @Html.HiddenFor(model => model.UtilizadorId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArtigoId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArtigoId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a Lista</a>
    </form>
</div>
